{
	"name": "listen-later",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "firebase emulators:exec --ui --only auth,functions,firestore \"npm run dev:no-emulators\"",
		"dev:no-emulators": "concurrently \"npx vite dev\" \"npm run build:watch --workspace ./functions\"",
		"build": "vite build",
		"preview": "firebase emulators:start",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:smoke": "playwright test -c ./smoke-tests/playwright.config.ts",
		"kill-emulator-ports": "npx kill-port 4000 9099 5001 8080 5000",
		"generate-screenshots": "playwright test --headed -c ./screenshot-generator/playwright.config.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.52.0",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@skeletonlabs/skeleton-svelte": "^1.2.3",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.8",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@testing-library/user-event": "^14.6.1",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.2",
		"dotenv": "^16.5.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"fuzzysort": "^3.1.0",
		"github-slugger": "^2.0.0",
		"jsdom": "^26.1.0",
		"marked": "^15.0.11",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"smooth-scroll-into-view-if-needed": "^2.0.2",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.7",
		"tailwindcss": "^4.1.5",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"uuid": "^11.1.0",
		"vite": "^6.3.4",
		"vitest": "^3.1.2"
	},
	"type": "module",
	"dependencies": {
		"firebase": "^11.6.1"
	},
	"workspaces": [
		"./functions"
	]
}
