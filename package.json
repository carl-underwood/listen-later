{
	"name": "listen-later",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "firebase emulators:exec --ui --only auth,functions,firestore \"npm run dev:no-emulators\"",
		"dev:no-emulators": "concurrently \"npx vite dev\" \"npm run build:watch --workspace ./functions\"",
		"build": "vite build",
		"preview": "firebase emulators:start",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:smoke": "playwright test -c ./smoke-tests/playwright.config.ts",
		"kill-emulator-ports": "npx kill-port 4000 9099 5001 8080 5000",
		"generate-screenshots": "playwright test --headed -c ./screenshot-generator/playwright.config.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.56.1",
		"@skeletonlabs/skeleton": "^2.11.0",
		"@skeletonlabs/tw-plugin": "^0.4.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.1",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"fuzzysort": "^3.1.0",
		"github-slugger": "^2.0.0",
		"globals": "^16.5.0",
		"jsdom": "^27.2.0",
		"marked": "^17.0.1",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"smooth-scroll-into-view-if-needed": "^2.0.2",
		"svelte": "^5.43.13",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"uuid": "^13.0.0",
		"vite": "^7.2.4",
		"vitest": "^4.0.12"
	},
	"overrides": {
		"cookie": "^1.0.2"
	},
	"type": "module",
	"dependencies": {
		"firebase": "^12.6.0"
	},
	"workspaces": [
		"./functions"
	]
}
