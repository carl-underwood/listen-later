{
	"name": "listen-later",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "firebase emulators:exec --ui --only auth,functions,firestore \"npm run dev:no-emulators\"",
		"dev:no-emulators": "concurrently \"npx vite dev\" \"npm run build:watch --workspace ./functions\"",
		"build": "vite build",
		"preview": "firebase emulators:start",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:smoke": "playwright test -c ./smoke-tests/playwright.config.ts",
		"kill-emulator-ports": "npx kill-port 4000 9099 5001 8080 5000",
		"generate-screenshots": "playwright test --headed -c ./screenshot-generator/playwright.config.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.47.2",
		"@skeletonlabs/skeleton": "^2.10.2",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.6.1",
		"@tailwindcss/forms": "^0.5.9",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/svelte": "^5.2.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.0.1",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"fuzzysort": "^3.0.2",
		"github-slugger": "^2.0.0",
		"jsdom": "^25.0.1",
		"marked": "^14.1.2",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"smooth-scroll-into-view-if-needed": "^2.0.2",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.4",
		"tailwindcss": "^3.4.13",
		"tslib": "^2.7.0",
		"typescript": "^5.6.2",
		"uuid": "^10.0.0",
		"vite": "^5.4.8",
		"vitest": "^2.1.1"
	},
	"type": "module",
	"dependencies": {
		"firebase": "^10.13.2"
	},
	"workspaces": [
		"./functions"
	]
}
